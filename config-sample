r_user= # remote username
r_host= # remote host
r_dir= # remote working directory

r_web_addr= # remote website address http://example.com
l_web_addr= # local website address for example http://example.local

l_db_name= # local database name
l_db_user= # local database user
l_db_pass= # local database password

r_db_name= # remote database name
r_db_user= # remote database user
r_db_pass= # remoate database password

l_upload_dir= # optional – local wordpress upload folder www/wp-content/uploads/ (relative to local working directory)
r_upload_dir= # optional – remote wordpress upload folder project/www/wp-content/uploads/ (relative to remote login/home directory)

l_plugin_dir= # optional – local wordpress upload folder www/wp-content/uploads/ (relative to local working directory)
r_plugin_dir= # optional – remote wordpress upload folder project/www/wp-content/uploads/ (relative to remote login/home directory)

l_db_charset= # optional – utf8
r_db_charset= # optional – wordpress now uses utf8mb4 if supported